<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ColorPalette" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_thumb_stroke_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ColorPalette.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ColorPickerDefaultStyle">
        <item name="tb_thumbRadius">@dimen/default_thumb_radius</item>
        <item name="tb_thumbColor">@color/default_thumb_color</item>
        <item name="tb_thumbStrokeColor">@color/default_thumb_stroke_color</item>
        <item name="tb_thumbColorCircleScale">@dimen/default_thumb_color_circle_scale</item>
    </style>

    <style name="SegmentedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="icon">@drawable/circle</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingTop">36dp</item>
        <item name="android:paddingBottom">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/bg_selector</item>
    </style>
</resources>